<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>hura</display-name>

	<servlet>
		<servlet-name>RequestServlet</servlet-name>
		<display-name>RequestServlet</display-name>
		<description></description>
		<servlet-class>com.github.blovemaple.hura.RequestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RawWiktionaryServlet</servlet-name>
		<display-name>RawWiktionaryServlet</display-name>
		<description></description>
		<servlet-class>com.github.blovemaple.hura.vortaro.RawWiktionaryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RequestServlet</servlet-name>
		<url-pattern>/request</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RawWiktionaryServlet</servlet-name>
		<url-pattern>/rawwiki</url-pattern>
	</servlet-mapping>
</web-app>
